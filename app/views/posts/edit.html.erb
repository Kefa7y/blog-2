<h1>Posts#edit</h1>

<%= form_for(@post,url: posts_update_path, method: "post") do |f| %>
  <%= hidden_field_tag(:id, @post.id) %>
  <%= label_tag("Title:") %><br>
  <%= f.text_field(:title ) %><br>
  <%= label_tag("Body:") %><br>
  <%= f.text_area(:body, size: "80x10") %> <br><br>
  <%= label_tag("Tags seperated by space:") %><br>
  <%= f.text_area(:tags, value: @post.tags.map { |r| r.name }.join(' ') ) %><br>
  <%= submit_tag("Edit") %>
<% end %>

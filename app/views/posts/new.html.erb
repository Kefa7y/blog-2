<h1>Posts#new</h1

<%= flash[:alert] %>
<form action="/" method="get">
    <input type="submit" value="Return to index">
</form>

<%= form_tag("/posts/create", method: "post") do %>
  <%= label_tag("Title:") %><br>
  <%= text_field(:post,:title) %><br>
  <%= label_tag("Body:") %><br>
  <%= text_area(:post,:body, size: "80x10") %> <br>
  <%= submit_tag("Create Post") %>
<% end %>

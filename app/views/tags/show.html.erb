<h1>Tags#show</h1>

<h2><%= @tag.name %></h2>

<table style="width:100%" border='1px solid black'>
  <tr>
    <th>Author</th>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <% @tag.posts.each do |post| %>
    <tr>
      <td><%= post.user.email%>
      </td>
      <td><%= link_to post.title,posts_show_path(id:post.id)%></td>
      <td><%= post.body %></td>
    </tr>
  <% end %>
</table>
